{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended"
	],
	"globals": {
		"__webpack_public_path__": true,
		"NODE_ENV": true,
		"PACKAGE_VERSION": true,
		"PUBLIC_PATH": true,
		"PUBLIC_PAGE_PATH": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"plugins": [],
	"rules": {
		"array-bracket-spacing": ["error", "never", {
			"arraysInArrays": true
		}],
		"arrow-body-style": "off",
		"indent": ["error", "tab", {
			"SwitchCase": 1,
			"MemberExpression": 0,
			"ignoreComments": true
		}],
		"max-len": ["error", {
			"code": 100,
			"tabWidth": 2,
			"ignoreStrings": true,
			"ignoreRegExpLiterals": true,
			"ignoreTemplateLiterals": true
		}],
		"max-lines": ["error", {
			"max": 500,
			"skipBlankLines": true
		}],
		"no-console": "off",
		"no-extra-boolean-cast": "off",
		"no-irregular-whitespace": ["error", {
			"skipRegExps": true,
			"skipTemplates": true
		}],
		"no-nested-ternary": "error",
		"no-trailing-spaces": ["error", {
			"skipBlankLines": true
		}],
		"no-unused-vars": ["error", {
			"args": "none"
		}],
		"space-before-blocks": ["error", "always"],
		"keyword-spacing": ["error", {
			"overrides": {
				"if": {
					"after": false
				},
				"switch": {
					"after": false
				},
				"for": {
					"after": false
				},
				"while": {
					"after": false
				},
				"catch": {
					"after": false
				}
			}
		}]
	}
}
